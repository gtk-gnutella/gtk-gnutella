OBJ = \
|expand f!$(SRC)!
	!f:\.c=.o \
-expand \\


/* Additional flags for GTK compilation, added in the substituted section */
++GLIB_CFLAGS $glibcflags

/* Add the libxml2 flags */
++XML2_CFLAGS $xmlcflags

/* Add the GNU TLS flags */
++GNUTLS_CFLAGS $gnutlscflags

/* Add the SQLite flags */
++SQLITE_CFLAGS $sqlitecflags

;# Those extra flags are expected to be user-defined
CFLAGS = -I$(TOP) -I.. $(GLIB_CFLAGS) $(XML2_CFLAGS) $(GNUTLS_CFLAGS) \
	$(SQLITE_CFLAGS) \
	-DCORE_SOURCES -DCURDIR=$(CURRENT)
DPFLAGS = $(CFLAGS)

IF = ../if
GNET_PROPS = gnet_property.h

RemoteTargetDependency(libcore.a, $(IF), $(GNET_PROPS))
NormalLibraryTarget(core, $(SRC), $(OBJ))
DependTarget()
